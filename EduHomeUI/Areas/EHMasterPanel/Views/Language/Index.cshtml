@using EduHome.Core.Entities;
@model IEnumerable<Language>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<partial name="_Notification" />
@{
	ViewData["Title"] = "Index";
	int count = 1;
}
<div class="container-fluid">

	<!-- start page title -->
	<div class="row">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Sliders</h4>
				<a asp-controller="Language" asp-action="Create" class="btn btn-primary mb-4">Create New Language</a>
				<div class="table-responsive">
					<table class="table table-dark mb-0">

						<thead>
							<tr>
								<th>#</th>
								<th>Language</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var language in Model)
							{
								<tr>
									<th scope="row">@count</th>
									<td>@language.LanguageOption</td>
				@*					<td>
										<a asp-action="Delete" asp-route-id="@language.Id" class="btn btn-danger mb-4"><i class="bi bi-trash-fill"></i></a>
									</td>*@
								</tr>
								count++;
							}

						</tbody>
					</table>
				</div>

			</div>
		</div>
	</div>
</div>