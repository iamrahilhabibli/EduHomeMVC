@using EduHomeUI.Areas.EHMasterPanel.ViewModels.LanguageViewModels
@model LanguageViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Language</h4>
                <form method="post">
                    <div class="mb-3 row">
                        <label asp-for="LanguageOption" class="col-md-2 col-form-label">Language</label>
                        <div class="col-md-10">
                            <input asp-for="LanguageOption" class="form-control" type="text" id="example-text-input">
                            <span asp-validation-for="LanguageOption" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row justify-content-end">
                        <div class="col-sm-9">
                            <div class="mt-3">
                                <button type="submit" class="btn btn-warning w-md">Create</button>
                            </div>
                        </div>
                        <div class="col-6 col-md-3 mt-3">
                            <a asp-controller="Language" asp-action="Index" class="btn btn-outline-primary border form-control">
                                Back to list
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
