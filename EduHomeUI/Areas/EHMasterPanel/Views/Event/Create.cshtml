@using EduHomeUI.Areas.EHMasterPanel.ViewModels.EventViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EventCreateViewModel
<partial name="_Notification" />
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Event</h4>
                <form method="post">
                    <div class="row mb-3">
                        <label asp-for="Title" class="col-md-3 col-form-label">Title</label>
                        <div class="col-sm-9">
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="ImagePath" class="col-md-3 col-form-label">Image Path</label>
                        <div class="col-sm-9">
                            <input asp-for="ImagePath" class="form-control" />
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="ImageName" class="col-md-3 col-form-label">Image Name</label>
                        <div class="col-sm-9">
                            <input asp-for="ImageName" class="form-control" />
                            <span asp-validation-for="ImageName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Venue" class="col-md-3 col-form-label">Venue</label>
                        <div class="col-sm-9">
                            <input asp-for="Venue" class="form-control" />
                            <span asp-validation-for="Venue" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="StartTime" class="col-md-3 col-form-label">StartTime</label>
                        <div class="col-sm-9">
                            <input asp-for="StartTime" class="form-control" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="EndTime" class="col-md-3 col-form-label">EndTime</label>
                        <div class="col-sm-9">
                            <input asp-for="EndTime" class="form-control" />
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Date" class="col-md-3 col-form-label">Date</label>
                        <div class="col-sm-9">
                            <input asp-for="Date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="SpeakerId" class="col-md-3 col-form-label">Speaker</label>
                        <div class="col-sm-9">
                            <select asp-for="SpeakerId" class="form-control">
                                <option value="">No Speaker</option>
                                @foreach (var speaker in Model.Speakers)
                                {
                                    <option value="@speaker.Id">@speaker.Name</option>
                                }
                            </select>
                            <input type="hidden" asp-for="Speakers" />
                            <span asp-validation-for="SpeakerId" class="text-danger"></span>
                        </div>
                    </div>

                    <h3>Event Details</h3>

                    <div class="row mb-3">
                        <label asp-for="Description" class="col-md-3 col-form-label">Description</label>
                        <div class="col-sm-9">
                            <textarea id="tiny" asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row justify-content-end">
                        <div class="col-sm-9">
                            <div class="mt-3">
                                <button type="submit" class="btn btn-warning w-md">Create</button>
                            </div>
                        </div>
                        <div class="col-6 col-md-3 mt-3">
                            <a asp-controller="Course" asp-action="Index" class="btn btn-outline-primary border form-control">
                                Back to list
                            </a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
