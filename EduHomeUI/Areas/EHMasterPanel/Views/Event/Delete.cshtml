@using EduHomeUI.Areas.EHMasterPanel.ViewModels.EventViewModels;
@model EventDeleteViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-action="Delete" method="post">
    <div class="row">
        <div class="col-xl-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">Delete Speaker</h4>

                    <div class="row mb-4">
                        <label asp-for="Title" class="col-sm-3 col-form-label">Title</label>
                        <div class="col-sm-9">
                            <input asp-for="Title" disabled class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label asp-for="Venue" class="col-sm-3 col-form-label">Venue</label>
                        <div class="col-sm-9">
                            <input asp-for="Venue" disabled class="form-control" />
                        </div>
                    </div>


                    <div class="row mb-4">
                        <label asp-for="Date" class="col-sm-3 col-form-label">Date</label>
                        <div class="col-sm-9">
                            <input asp-for="Date" disabled class="form-control" />
                        </div>
                    </div>


                    <div class="row mb-4">
                        <label asp-for="ImagePath" class="col-sm-3 col-form-label">Image</label>
                        <div class="col-sm-9">
                            <img src="@Model.ImagePath" alt="Event Image" class="img-fluid" />
                            <input asp-for="ImagePath" disabled class="form-control d-none" />
                        </div>
                    </div>

                    <div class="row justify-content-end">
                        <div class="col-sm-9">
                            <div>
                                <button type="submit" class="btn btn-danger w-md">Delete</button>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-action="Index" class="btn btn-outline-secondary border form-control">
                                Back to list
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
