@using EduHomeUI.Areas.EHMasterPanel.ViewModels.CourseCategoryViewModels;


@model CourseCategoryViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-action="Update" method="post">
    <div class="row mb-4">
        <label asp-for="Category" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="DateModified" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="DateModified" class="form-control" disabled />
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="col-sm-9">
            <div class="mt-3">
                <button type="submit" class="btn btn-warning w-md">Update</button>
            </div>
        </div>
        <div class="col-6 col-md-3 mt-3">
            <a asp-action="Index" class="btn btn-outline-primary border form-control">
                Back to list
            </a>
        </div>
    </div>
</form>