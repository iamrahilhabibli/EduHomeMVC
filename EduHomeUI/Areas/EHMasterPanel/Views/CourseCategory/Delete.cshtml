@using EduHome.Core.Entities;
@model CourseCategory
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form  asp-action="Delete" method="post">
    <div class="row mb-4">
        <label asp-for="Category" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Category" disabled class="form-control" />
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="col-sm-9">
            <div>
                <button type="submit" class="btn btn-danger w-md">Delete</button>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <a asp-action="Index" class="btn btn-outline-secondary border form-control ">
                Back to list
            </a>
        </div>
    </div>
</form>