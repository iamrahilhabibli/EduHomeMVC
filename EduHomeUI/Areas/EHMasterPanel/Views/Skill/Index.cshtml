@using EduHomeUI.Areas.EHMasterPanel.ViewModels.SkillViewModels;
@model SkillIndexViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<partial name="_Notification" />
@{
    int count = 1;
}
<div class="container-fluid">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Skill Levels</h4>
                <a asp-controller="Skill" asp-action="Create" class="btn btn-primary mb-4">Create New SkillLevel</a>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="dataTableData">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>SkillLevel</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var skillLevel in Model.SkillLevels)
                            {
                                if (!skillLevel.IsDeleted)
                                {
                                    
                                <tr>
                                    <td>@count</td>
                                    <td>@skillLevel.Skill</td>
                                    <td>
                                        <a asp-action="Delete" asp-route-id="@skillLevel.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                                    </td>
                                </tr>
                                count++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/datatable_file.js"></script>
}