@using EduHomeUI.Areas.EHMasterPanel.ViewModels.NoticeViewModels.cs;
@model NoticeIndexViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<partial name="_Notification" />
@{
    int count = 1;
}
<div class="container-fluid">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Notices</h4>
                <a asp-controller="Notice" asp-action="Create" class="btn btn-primary mb-4">Create New Notice</a>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="dataTableData">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Description</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var notice in Model.Notices)
                            {
                                if (!notice.IsDeleted)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@notice.Description</td>
                                        <td>@notice.DateCreated</td>
                                        <td>
                                            <a asp-action="Delete" asp-route-id="@notice.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                                        </td>
                                    </tr>
                                    count++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/datatable_file.js"></script>
}