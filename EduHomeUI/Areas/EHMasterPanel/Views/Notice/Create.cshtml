@using EduHomeUI.Areas.EHMasterPanel.ViewModels.NoticeViewModels.cs;
@model NoticeCreateViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Notice</h4>
                <form method="post">
                    <div class="row mb-3">
                        <label asp-for="Description" class="col-md-3 col-form-label">Description</label>
                        <div class="col-sm-9">
                            <input asp-for="Description" class="form-control" type="text" id="example-text-input">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-sm-9">
                            <div class="mt-3">
                                <button type="submit" class="btn btn-warning w-md">Create</button>
                            </div>
                        </div>
                        <div class="col-6 col-md-3 mt-3">
                            <a asp-controller="Notice" asp-action="Index" class="btn btn-outline-primary border form-control">
                                Back to list
                            </a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>