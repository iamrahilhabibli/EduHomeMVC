@using EduHomeUI.Areas.EHMasterPanel.ViewModels.TeacherViewModels;
@model TeacherDeleteViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-action="Delete" method="post">
    <div class="row">
        <div class="col-xl-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">Delete Teacher</h4>

                    <div class="row mb-4">
                        <label asp-for="Name" class="col-sm-3 col-form-label">Teacher</label>
                        <div class="col-sm-9">
                            <input asp-for="Name" disabled class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label asp-for="Surname" class="col-sm-3 col-form-label">Teacher</label>
                        <div class="col-sm-9">
                            <input asp-for="Surname" disabled class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label asp-for="ImagePath" class="col-sm-3 col-form-label">Teacher</label>
                        <div class="col-sm-9">
                            <img src="@Model.ImagePath" class="img-fluid" alt="Teacher Image" />
                        </div>
                    </div>


                    <div class="row justify-content-end">
                        <div class="col-sm-9">
                            <div>
                                <button type="submit" class="btn btn-danger w-md">Delete</button>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-action="Index" class="btn btn-outline-secondary border form-control">
                                Back to list
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
